generator client {
    provider      = "prisma-client-js"
    binaryTargets = ["native", "linux-musl", "rhel-openssl-3.0.x", "libquery_engine-rhel-openssl-3.0.x.so.node"]
}

datasource db {
    provider  = "postgresql"
    url       = env("DATABASE_URL")
    directUrl = env("DIRECT_URL")
}

model User {
    id        String   @id @default(cuid())
    email     String   @unique
    name      String
    password  String
    birthday  DateTime
    bio       String
    createdAt DateTime @default(now())
}
